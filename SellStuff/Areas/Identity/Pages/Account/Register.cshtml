@page
@using Models.Entities;
@inject UserManager<User> UserManager;
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-7">
        <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.FirstName" class="form-control" aria-required="true" />
                <label asp-for="Input.FirstName">First Name</label>
                <span asp-validation-for="Input.FirstName" class="text-danger" aria-required="true"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.LastName" class="form-control" aria-required="true" />
                <label asp-for="Input.LastName">Last Name</label>
                <span asp-validation-for="Input.LastName" class="text-danger" aria-required="true"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.AddressLine1" class="form-control" aria-required="true" />
                <label asp-for="Input.AddressLine1"></label>
                <span asp-validation-for="Input.AddressLine1" class="text-danger" aria-required="true"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.AddressLine2" class="form-control" aria-required="true" />
                <label asp-for="Input.AddressLine2"></label>
                <span asp-validation-for="Input.AddressLine2" class="text-danger" aria-required="true"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.City" class="form-control" aria-required="true" />
                <label asp-for="Input.City"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span> 
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.PostCode" class="form-control" aria-required="true" />
                <label asp-for="Input.PostCode"></label>
                <span asp-validation-for="Input.PostCode" class="text-danger" aria-required="true"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger" aria-required="true"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" style="font-size: 14px; color: #757575;"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" style="font-size: 14px; color: #757575;"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword" style="font-size: 14px; color: #757575;"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole("Admin"))
            {
            <div class="form-floating py-2 col-6">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                    <option selected>-Select-</option>
                </select>
            </div>
            }
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
